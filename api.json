/**
 * API
 */


/**
 * Create a group.
 */
POST /create
DATA
{
    "type" : "group",
    "name" : <name>,
}
RESPONSE
{ "status" : "ok", "id" : <created id> }
or
{ "status" : "failed" }

/**
 * Create a user
 */
POST /create
DATA
{
    "type" : "user",
    "username" : <username>,
    "name" : <name>,
    "password" : <password>,
    "group" : <group id>,
    "teacher" : true/false,
}
RESPONSE
{ "status" : "ok", "id" : <created id> }
or
{ "status" : "failed"  }

  
/**
 * Create a test.
 */
POST /create
DATA
{
    "type" : "test",
    "title" : <title>,
    "group" : <group-id>,
    "due" : <due date and time, YYYY-MM-DD HH:MM:SS>,
    "teacher" : <teachers user id>,
    "questions" : [
        { "text" : <question text> },
        ...
    ],
}
RESPONSE
{ "status" : "ok" , "id" : <created id> }
or
{ "status" : "failed" }

